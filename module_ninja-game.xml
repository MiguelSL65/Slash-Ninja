<?xml version="1.0" encoding="UTF-8"?>
<project name="module_ninja-game" default="compile.module.ninja-game">
  <dirname property="module.ninja-game.basedir" file="${ant.file.module_ninja-game}"/>
  
  <property name="module.jdk.home.ninja-game" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.ninja-game" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.ninja-game" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.ninja-game" value="-encoding UTF-8 -source 12 -target 12 ${compiler.args}"/>
  
  <property name="ninja-game.output.dir" value="${module.ninja-game.basedir}/out/production/ninja-game"/>
  <property name="ninja-game.testoutput.dir" value="${module.ninja-game.basedir}/out/test/ninja-game"/>
  
  <path id="ninja-game.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="ninja-game.module.production.classpath">
    <path refid="${module.jdk.classpath.ninja-game}"/>
    <path refid="library.simplegraphics.classpath"/>
  </path>
  
  <path id="ninja-game.runtime.production.module.classpath">
    <pathelement location="${ninja-game.output.dir}"/>
    <path refid="library.simplegraphics.classpath"/>
  </path>
  
  <path id="ninja-game.module.classpath">
    <path refid="${module.jdk.classpath.ninja-game}"/>
    <pathelement location="${ninja-game.output.dir}"/>
    <path refid="library.simplegraphics.classpath"/>
  </path>
  
  <path id="ninja-game.runtime.module.classpath">
    <pathelement location="${ninja-game.testoutput.dir}"/>
    <pathelement location="${ninja-game.output.dir}"/>
    <path refid="library.simplegraphics.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.ninja-game">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.ninja-game">
    <patternset refid="excluded.from.module.ninja-game"/>
  </patternset>
  
  <path id="ninja-game.module.sourcepath">
    <dirset dir="${module.ninja-game.basedir}">
      <include name="src"/>
      <include name="Resources"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.ninja-game" depends="compile.module.ninja-game.production,compile.module.ninja-game.tests" description="Compile module ninja-game"/>
  
  <target name="compile.module.ninja-game.production" depends="register.custom.compilers" description="Compile module ninja-game; production classes">
    <mkdir dir="${ninja-game.output.dir}"/>
    <javac2 destdir="${ninja-game.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.ninja-game}/javac">
      <compilerarg line="${compiler.args.ninja-game}"/>
      <bootclasspath refid="ninja-game.module.bootclasspath"/>
      <classpath refid="ninja-game.module.production.classpath"/>
      <src refid="ninja-game.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.ninja-game"/>
    </javac2>
    
    <copy todir="${ninja-game.output.dir}">
      <fileset dir="${module.ninja-game.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.ninja-game.basedir}/Resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.ninja-game.tests" depends="register.custom.compilers,compile.module.ninja-game.production" description="compile module ninja-game; test classes" unless="skip.tests"/>
  
  <target name="clean.module.ninja-game" description="cleanup module">
    <delete dir="${ninja-game.output.dir}"/>
    <delete dir="${ninja-game.testoutput.dir}"/>
  </target>
</project>